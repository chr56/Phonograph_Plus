<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <player.phonograph.preferences.basic.PreferenceCategoryX android:title="@string/pref_header_now_playing_screen">

        <player.phonograph.preferences.NowPlayingScreenPreferenceX
            app:iconSpaceReserved="false"
            android:key="now_playing_screen_id"
            android:title="@string/pref_title_now_playing_screen_appearance" />

        <player.phonograph.preferences.basic.SwitchPreferenceX
            app:iconSpaceReserved="false"
            android:defaultValue="true"
            android:key="synchronized_lyrics_show"
            android:summary="@string/pref_summary_synchronized_lyrics_show"
            android:title="@string/pref_title_synchronized_lyrics_show" />

    </player.phonograph.preferences.basic.PreferenceCategoryX>

</androidx.preference.PreferenceScreen>